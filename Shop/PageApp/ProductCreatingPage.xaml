<Page x:Class="Shop.PageApp.ProductCreatingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Shop.PageApp"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductCreatingPage">

    <Grid>
        <StackPanel VerticalAlignment="Center">
            <Label HorizontalContentAlignment="Center">Name</Label>
            <TextBox x:Name="tbName"/>
            <Label HorizontalContentAlignment="Center">Cost</Label>
            <TextBox x:Name="tbCost"/>
            <Button Content="Select" Name="btnSelect" Click="btnSelect_Click"/>
            <Button Content="Create" Name="btnCreate" Click="btnCreate_Click"/>
        </StackPanel>
    </Grid>
</Page>
